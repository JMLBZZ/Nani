{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Détails</h1>
    <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark btn-sm my-2" title="Annuler">Annuler</a>
</div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr> #}
            <tr>
                <th>Titre</th>
                <td>{{ home.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.text }}</td>
            </tr>
            <tr>
                <th>Activé ?</th>
                <td>{{ home.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-success my-2" title="Modifier">
        <i class="align-middle" data-feather="edit-3"></i>
    </a>
    <div class="text-end">
        {{ include('admin_home/_delete_form.html.twig') }}
    </div>
{% endblock %}
