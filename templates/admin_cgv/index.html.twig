{% extends 'base-backend.html.twig' %}

{% block title %}Cgv{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Conditions Générales de Vente</h1>

        {# barre de recherche #}
        <div class="d-flex">
            <form method="post" class="d-flex mx-3">
                <button type="submit" class="btn btn-dark">
                    <i data-feather="search"></i>
                </button>
                <input type="text" name="search" class="form-control" placeholder="Rechercher">
            </form>

            <a href="{{ path('app_admin_cgv_new') }}" class="btn btn-primary" title="Nouveau">Nouveau</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre</th>
                <th>Texte</th>
                {# <th>UpdatedAt</th> #}
                <th class="text-end">Activé ?</th>
                <th class="text-end">Voir / Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for cgv in cgvs %}
            <tr>
                {# <td>{{ cgv.id }}</td> #}
                <td>{{ cgv.title }}</td>
                <td>{{ cgv.text |u.truncate(300) |raw }}...</td>
                {# <td>{{ cgv.updatedAt ? cgv.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
                <td>{{ cgv.isActive ? 'Oui' : 'Non' }}</td>
                <td class="text-end">
                    <a href="{{ path('app_admin_cgv_show', {'id': cgv.id}) }}" class="btn btn-dark" title="Détails">
                        <i class="align-middle" data-feather="eye"></i>
                    </a>
                    <a href="{{ path('app_admin_cgv_edit', {'id': cgv.id}) }}" class="btn btn-success" title="Modifier">
                        <i class="align-middle" data-feather="edit-3"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucunes données présentes</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#display navigation#} 
    {# <div class="navpag d-flex justify-content-center align-items-center">
    {{ knp_pagination_render(cvgs) }}
    </div> #}
{% endblock %}
