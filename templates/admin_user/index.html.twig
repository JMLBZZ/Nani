{% extends 'base-backend.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Utilisateurs</h1>

        {# barre de recherche #}
        <div class="d-flex">
            <form method="post" class="d-flex mx-3">
                <button type="submit" class="btn btn-dark">
                    <i data-feather="search"></i>
                </button>
                <input type="text" name="search" class="form-control" placeholder="Rechercher">
            </form>

            <a href="{{ path('app_admin_user_new') }}" class="btn btn-primary" title="Nouveau">Nouveau</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                {# <th>Roles</th> #}
                {# <th>Password</th> #}
                <th>Civ.</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Adresse</th>
                <th>Complément d'adresse</th>
                <th>Code postale</th>
                <th>Ville</th>
                <th>Tél.</th>
                <th>Email</th>
                <th>Profil confirmé?</th>
                {# <th>Slug</th> #}
                {# <th>SecretIV</th> #}
                <th class="text-end">Voir / Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {# {% if is_granted ("ROLE_USER") and is_granted ("ROLE_ADMIN") == false %} #}
            <tr>
                {# <td>{{ user.id }}</td> #}
                {# <td>{{ user.roles ? user.roles|json_encode : '' }}</td> #}
                {# <td>{{ user.password }}</td> #}
                <td>{{ user.civ }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.street }}</td>
                <td>{{ user.complement }}</td>
                <td>{{ user.cp }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                {# <td>{{ user.slug }}</td> #}
                {# <td>{{ user.secretIV }}</td> #}

                <td class="text-end">
                    <a href="{{ path('app_admin_user_show', {'id': user.id}) }}" class="btn btn-dark" title="Détails">
                        <i class="align-middle" data-feather="eye"></i>
                    </a>
                    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success" title="Modifier">
                        <i class="align-middle" data-feather="edit-3"></i>
                    </a>
                </td>

            </tr>
        {# {% endif %} #}
        {% else %}
            <tr>
                <td colspan="11">Aucunes données présentes</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
    <div class="navpag d-flex justify-content-center align-items-center">
        {{ knp_pagination_render(users) }}
    </div>

{% endblock %}
