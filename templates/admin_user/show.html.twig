{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails</h1>
        <a href="{{ path('app_admin_user_index') }}" class="btn btn-dark btn-sm my-2 rounded" title="Annuler">Annuler</a>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr> #}
            {# <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr> #}
            {# <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr> #}
            <tr>
                <th>Civilité</th>
                <td>{{ user.civ }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.street }}</td>
            </tr>
            <tr>
                <th>Complément d'adresse</th>
                <td>{{ user.complement }}</td>
            </tr>
            <tr>
                <th>Code postale</th>
                <td>{{ user.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Tél.</th>
                <td>{{ user.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Profil confirmé ?</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            {# <tr>
                <th>Slug</th>
                <td>{{ user.slug }}</td>
            </tr> #}
            {# <tr>
                <th>SecretIV</th>
                <td>{{ user.secretIV }}</td>
            </tr> #}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}" class="btn btn-success my-2 rounded" title="Modifier">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        <div class="text-end">
            {{ include('admin_user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
