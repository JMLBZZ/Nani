{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails</h1>
        <a href="{{ path('app_admin_card_index') }}" class="btn btn-dark btn-sm my-2 rounded" title="Annuler">Annuler</a>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ card.id }}</td>
            </tr> #}
            <tr>
                <th>Picto</th>
                <td>
                    <a href="{{asset('images/card_picto/' ~ card.imageName)}}" data-lightbox="{{ card.imageName }}" data-title="{{ card.imageName }}">
                        <img src="{{asset('images/card_picto/' ~ card.imageName)}}" class="img-list w-50" alt="{{ card.imageName }}">
                    </a>
                </td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ card.title|raw }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ card.text|raw }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ card.tag }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ card.updatedAt ? card.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Activé ?</th>
                <td>{{ card.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_card_edit', {'id': card.id}) }}" class="btn btn-success my-2" title="Modifier">
        <i class="align-middle" data-feather="edit-3"></i>
    </a>
    <div class="text-end">
        {{ include('admin_card/_delete_form.html.twig') }}
    </div>
{% endblock %}
