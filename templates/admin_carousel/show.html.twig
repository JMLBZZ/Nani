{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails</h1>
        <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark btn-sm my-2 rounded" title="Annuler">Annuler</a>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr> #}
            <tr>
                <th>Photo</th>
                    <td>
                        <a href="{{asset('images/carousel_home/' ~ carousel.imageName)}}" data-lightbox="{{ carousel.imageName }}" data-title="{{ carousel.imageName }}">
                            <img src="{{asset('images/carousel_home/' ~ carousel.imageName)}}" class="img-list" alt="{{ carousel.imageName }}">
                        </a>
                    </td>
                </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carousel.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.text }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-success my-2" title="Modifier">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        <div class="text-end">
            {{ include('admin_carousel/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
