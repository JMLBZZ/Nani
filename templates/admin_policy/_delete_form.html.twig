<form method="post" action="{{ path('app_admin_policy_delete', {'id': policy.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression de cet élément?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ policy.id) }}">
    <button class="btn btn-danger" title="Supprimer">
        <i class="align-middle" data-feather="trash-2"></i>
    </button>
</form>
