{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails</h1>
        <a href="{{ path('app_admin_policy_index') }}" class="btn btn-dark btn-sm my-2 rounded" title="Annuler">Annuler</a>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ policy.id }}</td>
            </tr> #}
            <tr>
                <th>Titre</th>
                <td>{{ policy.title }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ policy.text }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ policy.updatedAt ? policy.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Activé ?</th>
                <td>{{ policy.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_policy_edit', {'id': policy.id}) }}" class="btn btn-success my-2" title="Modifier">
        <i class="align-middle" data-feather="edit-3"></i>
    </a>
    <div class="text-end">
        {{ include('admin_policy/_delete_form.html.twig') }}
    </div>
{% endblock %}
