{% extends 'base-backend.html.twig' %}

{% block title %}Détail{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Détails</h1>
        <a href="{{ path('app_admin_kid_index') }}" class="btn btn-dark btn-sm my-2 rounded" title="Annuler">Annuler</a>
    </div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ kid.id }}</td>
            </tr> #}
            <tr>
                <th>Name</th>
                <td>{{ kid.name }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ kid.firstname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ kid.birthdate ? kid.birthdate|date("d/m/Y") : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_kid_edit', {'id': kid.id}) }}" class="btn btn-success my-2 rounded" title="Modifier">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        <div class="text-end">
            {{ include('admin_kid/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
