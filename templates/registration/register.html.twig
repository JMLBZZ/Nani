{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <div class="d-flex align-items-center">
            {{ form_row(registrationForm.agreeTerms) }}
            J'accepte&nbsp;<a href="#">les conditions d'utilisation</a>&nbsp;et&nbsp;<a href="#">la politique de confidentialit√©</a>&nbsp;de Nani.
        </div>
        
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-success btn-sm">S'inscrire</button>
            <a href="{{path ("app_login")}}" class="btn btn-dark btn-sm my-2"  title="Inscription">Se connecter</a>

        </div>
    {{ form_end(registrationForm) }}
{% endblock %}
