{% extends 'base-backend.html.twig' %}

{% block title %}Détails{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center">
    <h1>Détails</h1>
    <a href="{{ path('app_admin_nursery_index') }}" class="btn btn-dark btn-sm my-2" title="Annuler">Annuler</a>
</div>
    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ nursery.id }}</td>
            </tr> #}
            <tr>
                <th>Photo</th>
                <td>
                    <a href="{{asset('images/nursery/' ~ nursery.imageName)}}" data-lightbox="{{ nursery.imageName }}" data-title="{{ nursery.imageName }}">
                        <img src="{{asset('images/nursery/' ~ nursery.imageName)}}" class="img-list" alt="{{ nursery.imageName }}">
                    </a>
                </td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ nursery.name }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ nursery.siret }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ nursery.street }}</td>
            </tr>
            <tr>
                <th>Complément d'adresse</th>
                <td>{{ nursery.complement }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ nursery.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ nursery.city }}</td>
            </tr>
            <tr>
                <th>Tél.</th>
                <td>{{ nursery.tel }}</td>
            </tr>
            <tr>
                <th>Capacité d'accueil total</th>
                <td>{{ nursery.capacity }}</td>
            </tr>
            <tr>
                <th>Capacité de réservation</th>
                <td>{{ nursery.capacityresa }}</td>
            </tr>
            <tr>
                <th>Activé ?</th>
                <td>{{ nursery.isActive ? 'Oui' : 'Non' }}</td>
            </tr>
            {# <tr>
                <th>Slug</th>
                <td>{{ nursery.slug }}</td>
            </tr> #}
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <a href="{{ path('app_admin_nursery_edit', {'id': nursery.id}) }}" class="btn btn-success my-2" title="Modifier">
            <i class="align-middle" data-feather="edit-3"></i>
        </a>
        <div class="text-end">
            {{ include('admin_nursery/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
